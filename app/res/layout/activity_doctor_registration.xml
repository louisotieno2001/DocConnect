<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     >
<androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/back_arrow"
                android:background="@drawable/ic_back"
                android:padding="24dp"
                android:layout_margin="16dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name_text"
                android:text="Welcome doctor"
                android:textStyle="bold"
                android:textSize="25sp"
                android:padding="24dp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="16dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Institution(Where you work currently)"
        android:layout_margin="8dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/institution_text"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@drawable/rounded_shape"
        android:hint="@string/institution_name"
        android:drawableLeft="@drawable/ic_work"
        android:drawablePadding="4dp"
        android:drawableRight="@drawable/ic_edit"
        android:layout_margin="6dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Specialization(What are you expert in)"
        android:layout_margin="8dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/specialisation_text"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@drawable/rounded_shape"
        android:hint="@string/speciality"
        android:drawableRight="@drawable/ic_edit"
        android:drawableLeft="@drawable/ic_speciality"
        android:drawablePadding="4dp"
        android:layout_margin="6dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/save_text"
        android:text="@string/save"
        android:padding="16dp"
        android:textStyle="bold"
        android:textSize="20sp"/>


</LinearLayout>




</LinearLayout>
